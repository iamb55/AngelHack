%html
  %head
    %title Mentor.im
    = stylesheet_link_tag "application", :media => "all"
    <link rel="shortcut icon" href="/favicon.ico" />
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,700,300italic' rel='stylesheet' type='text/css'>
    = javascript_include_tag "application"
    <script src="http://staging.tokbox.com/v0.91/js/TB.min.js" type="text/javascript" charset="utf-8"></script>
    = csrf_meta_tags
    = yield :head

  %body
    -if current_user
      :javascript
        var current_user = "#{current_user.id}"
  .wrapper
    #header
      .container_12
        .grid_2
          -if current_user.user_type == 'mentee'
            = link_to image_tag( 'mentor-h.png'),  mentees_path + '/conversations'
          -else
            = link_to image_tag( 'mentor-h.png'),  mentors_path + '/conversations'
        .grid_2
          -if current_user.user_type == 'mentee'
            = link_to 'Messages',  mentees_path + '/conversations'
          -else
            = link_to 'Messages',  mentors_path + '/conversations'
        .grid_2
          -if current_user.user_type == 'mentee'
            = link_to 'Profile', "#"
          -else
            = link_to 'Profile', "#"
        .grid_2
          -if current_user.user_type == 'mentee'
            %a.newq{href: "#"} Add A Question
          -else
            = link_to 'New Questions', mentors_path + '/stream'
        .grid_2
          -if current_user.user_type == 'mentee'
            = link_to 'Mentors',  mentees_path + '/conversations'
          -else  
            = link_to 'Mentees', mentors_path + '/conversations'
        .grid_2
          -if current_user
            = link_to 'Sign Out', '/sign_out'
          -else
            = link_to 'Sign In', '/sign_in'
    = yield
    
    .push
  .footer
    .container_12
      %p.leftf 
        Made by <a href="https://twitter.com/#!/brennenbyrne" title="brenne byrne">five</a> <a href="https://twitter.com/#!/grungerabbit" title="cheryl wu">nerds</a> <a href="https://twitter.com/#!/conwayanderson" title="conway anderson">at</a> <a href="https://twitter.com/#!/jessepollak" title="jesse pollak">Angelhack</a> <a href="https://twitter.com/#!/thetabyte" title="jordan goldstein">NYC</a>
      %p.rightf About | Navigation | Navigation

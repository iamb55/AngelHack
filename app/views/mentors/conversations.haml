=content_for :head do
  =javascript_include_tag 'conversation_view'
  =javascript_include_tag 'ICanHaz.min.js'
  =javascript_include_tag 'templates/message'
  =javascript_include_tag 'conversation_view'
  
#main
  .container_12
    .conversations
      .grid_4
        .users
          .nice.button New Question
          %ul.list
            -@conversations.each do |conversation| 
              %li
                
                .user{data: { id: "#{conversation[:id]}"}}
                  %img.imagerounded{src: "#{conversation[:user].picture_url}"}
                  .information
                    %p.rightf test
                    %h4= conversation[:user].first_name
                    %p test
                  .clear    
              
      .grid_8
        .messages
          %ul
            -@messages.each do |message| 
              %li
                .container_12
                  .grid_1
                    %img.imagerounded{src: "http://www.dummyimage.com/50x50/000000/fff"}
                  .grid_5
                    %h5 Conway Anderson
                  .grid_2#timestamp  
                    yay
                .message{class: "#{message.owner_type}"}
                  %p=message.value
                  %span=message.created_at
    .clear        